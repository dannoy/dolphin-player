<?xml version="1.0" encoding="utf-8"?>
 <merge xmlns:android="http://schemas.android.com/apk/res/android" >
    <com.broov.player.GLSurfaceView_SDL android:id="@+id/glsurfaceview" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="fill_parent"></com.broov.player.GLSurfaceView_SDL>
            <FrameLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="@color/transparent" android:id="@+id/hidecontainer">
    	
    	    <TableLayout android:background="@color/transparent" android:layout_gravity="bottom" android:stretchColumns="1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:id="@+id/controlPanel" >                				
                <TableRow android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:baselineAligned="true" android:layout_weight="1">
                    <TextView android:id="@+id/currenttime" android:textSize="15dip" 
                              android:textColor="#CCCCCC"  android:text="00:00"
                              android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.0" android:layout_gravity="center"></TextView>
                    <SeekBar android:paddingLeft="12dip" android:paddingRight="12dip" 
                             style="?android:attr/progressBarStyleHorizontal"  android:progress="0"
                             android:layout_weight="1.0" android:layout_height="wrap_content" android:id="@+id/progressbar" android:max="1000"  android:minHeight="7dip" android:maxHeight="8dip" 
                             android:thumb="@drawable/seekbar_thumb" android:thumbOffset="10dip" android:layout_width="wrap_content"></SeekBar>
                    <TextView android:textSize="15dip" android:paddingLeft="12dip" android:paddingRight="12dip" 
                              android:id="@+id/totaltime"  android:textColor="#CCCCCC" 
                              android:layout_width="wrap_content"  android:layout_height="wrap_content" android:layout_weight="0.0" 
                              android:text="00:00" android:layout_gravity="center" ></TextView>
                </TableRow>
                <TableRow android:id="@+id/tableRow2" android:paddingTop="5dip" android:baselineAligned="false" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_marginTop="5dip" android:layout_marginBottom="5dip" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1">
                     <ImageView android:paddingLeft="20dip" android:src="@drawable/fs_shadow_4_3" android:id="@+id/fs_shadow" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_horizontal"> </ImageView>
                     <LinearLayout android:paddingLeft="10dip"
            			android:paddingRight="10dip" android:layout_height="wrap_content" android:layout_width="wrap_content" android:baselineAligned="false" android:layout_gravity="center_horizontal">
                     
                     <ImageView android:id="@+id/img_vp_backward" android:src="@drawable/vp_backward" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></ImageView>
                     <ImageView android:paddingLeft="20dip" android:paddingRight="20dip" android:layout_gravity="center" android:id="@+id/img_vp_play" android:src="@drawable/vp_pause_shadow" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="30dip" android:layout_marginRight="30dip"></ImageView>
                     <ImageView android:id="@+id/img_vp_forward" android:src="@drawable/vp_forward" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_horizontal"></ImageView>
                     </LinearLayout>
                     
                </TableRow>
            </TableLayout>
            </FrameLayout>
     	
 </merge>